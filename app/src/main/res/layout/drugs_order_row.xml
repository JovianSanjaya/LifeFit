<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="335dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/row_drugs_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/some_obh_combi"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"/>
            <TextView
                android:id="@+id/row_drugs_name"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="12dp"
                android:text="OBH Combi"
                android:textColor="#09051C"
                android:textSize="19sp"
                android:fontFamily="@font/opensans_bold"/>
            <TextView
                android:id="@+id/row_drugs_dosage_amount"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="45dp"
                android:text="75ml"
                android:textColor="#ADADAD"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_bold"/>
            <TextView
                android:id="@+id/row_drug_cost"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="250dp"
                android:layout_marginTop="70dp"
                android:text="$9.99"
                android:textColor="#101623"
                android:textSize="18sp"
                android:fontFamily="@font/opensans_bold"/>
            <TextView
                android:id="@+id/row_drugs_quantity_selected"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="70dp"
                android:text="1x"
                android:textColor="#181818"
                android:textSize="17sp"
                android:fontFamily="@font/opensans_regular"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>