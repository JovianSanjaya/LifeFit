<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsmallcirclesatcorner">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="168dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Detail \nService"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gobackbtn_detail_service_house_cleaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="340dp"
        android:background="@null"
        android:src="@drawable/gobackbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_medium"
        android:lineSpacingExtra="6dp"
        android:text="LifeFit provides you and \nyour loved ones with comfortable environment"
        android:textColor="#303535"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <androidx.cardview.widget.CardView
        android:layout_width="353dp"
        android:layout_height="72dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginTop="295dp"
        android:layout_marginEnd="33dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@drawable/house" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="155dp"
                android:layout_height="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="3 Bedrooms, 1 Kitchen"
                android:textColor="#262A27"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="152dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:text="+$4 for bathrooom"
                android:textColor="#BFBFBF"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView33"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="103dp"
                android:layout_height="72dp"
                android:layout_marginStart="240dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="$45/hr"
                android:textColor="#5C598D"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="353dp"
        android:layout_height="72dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="33dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@drawable/person"
                android:src="@drawable/person"/>

            <TextView

                android:id="@+id/textView34"
                android:layout_width="178dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:gravity="bottom"
                android:text="3 Cleaners"
                android:textColor="#262A27"
                app:layout_constraintStart_toEndOf="@+id/imageView24"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="213dp"
                android:layout_height="19dp"
                android:layout_weight="1"
                android:text="+$14 / cleaner"
                android:textColor="#BFBFBF"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/imageView24"
                app:layout_constraintTop_toBottomOf="@+id/textView34"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_marginStart="240dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="$14/person"
                android:textColor="#5C598D"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/imageView24"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="228dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Responsibilities:"
        android:textColor="#222123"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/poppins_medium"
        android:lineSpacingExtra="4dp"
        android:text="Cleaning services are responsible for performing general cleaning tasks, which include dusting, vacuuming, sweeping, and mopping floors."
        android:textColor="#989494"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Cleaning service providers are responsible for thoroughly cleaning and sanitizing restrooms."
        android:textColor="#989494"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        tools:ignore="TextSizeCheck"
        android:lineSpacingExtra="4dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ordernowbtn_housekeeping"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="692dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/custom_button_15radius"
        android:backgroundTint="@color/themecolor"
        android:text="order now"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="99dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="285dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                tools:srcCompat="@drawable/markericon" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="City Center"
                android:textAlignment="center"
                android:textColor="#262A27" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="99dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="160dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/clockicon" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="House Clean"
                android:textAlignment="center"
                android:textColor="#262A27" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="99dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="35dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                tools:srcCompat="@drawable/cashicon" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="$45/hr"
                android:textAlignment="center"
                android:textColor="#262A27" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="612dp"
        android:layout_marginEnd="10dp"

        android:src="@drawable/oval"
        app:layout_constraintEnd_toStartOf="@+id/textView21"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="10dp"

        android:src="@drawable/oval"
        app:layout_constraintEnd_toStartOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>