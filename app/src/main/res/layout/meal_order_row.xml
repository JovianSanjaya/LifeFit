<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="335dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#FDEBC9"
        app:cardCornerRadius="22dp"
        android:paddingBottom="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/row_food_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/spicy_crab_salad_pic"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"/>

            <TextView
                android:id="@+id/row_food_name"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/opensans_condensed_semibold"
                android:text="Spicy Crab Salad"
                android:textColor="#09051C"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/row_restaurant_name"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="45dp"
                android:text="SaladStop"
                android:textColor="#3B3B3B"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_regular"/>
            <TextView
                android:id="@+id/row_food_cost"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="70dp"
                android:text="$15"
                android:textColor="#FF9E43"
                android:textSize="20sp"
                android:fontFamily="@font/opensans_bold"/>

            <TextView
                android:id="@+id/row_quantity_amount"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="291dp"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/opensans_regular"
                android:text="1x"
                android:textColor="#181818"
                android:textSize="17sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>