<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailService_HouseCleaningOrder"
    android:background="@drawable/detailservicebg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        android:layout_marginTop="320dp"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/bedroom_kitchen_cleaning"
            android:layout_width="342dp"
            android:layout_height="66dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/house"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="3 Bedrooms, 1 Kitchen" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+$4 for bathroom"
                        android:textColor="#BFBFBF"
                        android:textSize="14dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="$45/hr"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
                android:layout_width="342dp"
                android:layout_height="66dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/person"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="3 Cleaners" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+$14/cleaner"
                        android:textColor="#BFBFBF"
                        android:textSize="14dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="$14/person"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <Button
        android:id="@+id/ordernowbtn"
        android:layout_width="166dp"
        android:layout_height="59dp"
        android:backgroundTint="#5DBCC5"
        android:text="Order Now"
        app:cornerRadius="50dp"
        android:layout_marginTop="260dp"
       android:layout_marginLeft="220dp"
        android:fontFamily="@font/opensans_regular"/>


</LinearLayout>