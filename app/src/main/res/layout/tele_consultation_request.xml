<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teleconsultationicon">

    <ImageButton
        android:id="@+id/backbtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gobackbtn2" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginTop="204dp"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:text="Tele-Consultation"
        android:textColor="#FFFFFF"
        android:textSize="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="292dp"
        android:layout_height="30dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="444dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Responsibilities:"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="468dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="•"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="584dp"
        android:fontFamily="@font/poppins_medium"
        android:lineSpacingExtra="6dp"
        android:text="The patient can discuss their symptoms, medical history, and any concerns they may have."
        android:textColor="#989494"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView67"
        android:layout_width="45dp"
        android:layout_height="29dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="572dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="•"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView61"
        android:layout_width="307dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="479dp"
        android:fontFamily="@font/poppins_medium"
        android:lineSpacingExtra="6dp"
        android:text="The healthcare provider provide medical advice, make diagnoses, and recommend treatment options online which makes communication for more convenient."
        android:textColor="#989494"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/requestnow_teleconsulatation"
        android:layout_width="159dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginStart="124dp"
        android:layout_marginTop="664dp"
        android:background="@drawable/custom_button_15radius"
        android:backgroundTint="@color/themecolor"
        android:gravity="center"
        android:text="Request Now"
        android:textSize="12dp"
        app:cornerRadius="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView10"
        android:layout_width="106dp"
        android:layout_height="92dp"
        android:layout_margin="10dp"
        android:layout_marginEnd="25dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView9"
        app:layout_constraintTop_toBottomOf="@+id/cardView7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="52dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/cashicon" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Price"
                android:textColor="@color/LightGrey"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="$45/hr"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="106dp"
        android:layout_height="92dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView7"
        tools:layout_editor_absoluteX="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="49dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/markericon" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Location"
                android:textColor="@color/LightGrey"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="City Center"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="106dp"
        android:layout_height="92dp"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/cardView10"
        app:layout_constraintStart_toEndOf="@+id/cardView8"
        app:layout_constraintTop_toBottomOf="@+id/cardView7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="47dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/clockicon" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Service "
                android:textColor="@color/LightGrey"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Consultation"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="264dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/tele_consultation_icon" />

            <LinearLayout
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView53"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Home-based"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Online Consultations with a Doctor"
                    android:textColor="@color/LightGrey"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>