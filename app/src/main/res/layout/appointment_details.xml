        android:textColor="#09051C"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="482dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="#5DBCC5"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="14dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="11:00 am"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="#D8D4D4"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="14dp"
                        android:gravity="center"
                        android:fontFamily="@font/opensans_regular"
                        android:text="13:00 pm"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="#5DBCC5"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="14dp"
                        android:gravity="center"
                        android:fontFamily="@font/opensans_regular"
                        android:text="17:00 pm"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="520dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="482dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="#D8D4D4"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="14dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="Sun 4"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:foregroundGravity="center"
                    app:cardBackgroundColor="#5DBCC5"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="14dp"
                        android:gravity="center"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Mon 5"
                        android:textSize="20dp"
                        android:textColor="@color/White"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#D8D4D4">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="Wed 6"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextbtn_appointmentdetails"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/custom_button_15radius"
        android:backgroundTint="@color/themecolor"
        android:text="next"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>