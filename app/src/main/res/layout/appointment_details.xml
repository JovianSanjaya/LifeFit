        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/markericon2" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="628dp"
